{% extends 'base.html.twig' %}

{% block title %}Login de usuarios{% endblock %}

{% block body %}

<div class="example-wrapper">
        <h2 id="textorg">Login de usuarios✅</h2>

        {% if error %}
            <div class="alert alert-error">
                {{ error.messagekey|trans(error.messageData, 'security') }}
            </div>
        {% endif %}
        
        <form method="post" action="{{ path('login') }}" accept-charset="UTF-8">
            <input type="hidden" name="action" value="users/login">
        
            <h3><label for="username">Email</label></h3>
            <input autocomplete="off" id="username" type="email" name="_username"
                value=" {{ last_username }} ">
        
            <h3><label for="password">Contraseña</label></h3>
            <input id="password" type="password" name="_password">
        
            <input type="submit" value="Entrar" />
        
            {# {% if errorMessage is defined %}
                <p>{{ errorMessage }}</p>
            {% endif %} #}
        </form>
        
        {# <p><a href="{{ url("forgotpassword") }}">Forgot your password?</a></p> #}
</div>
{% endblock %}