            
    <table>
        <tr>
            <th>
                Creado por
            </th>

             

            <th>
                Tarea
            </th>

            <th>
                Para
            </th>

            <th>
                Prioridad
            </th>

            <th>
                Días estimados
            </th>

            <th>
                Estado de la tarea
            </th>

            <th>
                Acciones de tareas
            </th>
            <th>
            Archivo adjunto
             </th>
        </tr>

        {% for task in tasks %}
            <tr>
                <td>{{task.user.name}}</td>
            
                <td>{{task.title}}</td>
                <td>{{task.receptor}}</td>
                
               
                
                <td>
                    {% if task.priority == 'high' %}
                        {{'Alta'}}
                    {% endif %}
                    {% if task.priority == 'low' %}
                        {{'Baja'}}
                    {% endif %}
                    {% if task.priority == 'medium' %}
                        {{'Medio'}}
                    {% endif %}
                </td>


                <td>{{task.hours}}</td>
                
                <td>
                    {% if task.state == 'unfinished' %}
                        {{'Sin terminar'}}
                    {% endif %}
                    {% if task.state == 'finished' %}
                        {{'Terminada'}}
                    {% endif %}
                </td>
                
                <td class="buttons">
                    <a href="{{ path('task_detail', {'id':task.id}) }}" class="btnsucc"><strong>Ver <i class="fas fa-eye"></i></strong></a>                   
                    
                
                    {% if app.user != null and task.user.id == app.user.id %}
                    <a href="{{ path('task_edit', {'id':task.id}) }}" class="btninfo"><strong>Editar <i class="fas fa-edit"></i></strong></a>
                    <a href="{{ path('task_delete', {'id':task.id}) }}" class="btneli"><strong>Eliminar <i class="fas fa-trash-alt"></i> </strong></a>

    
                    {% endif %}
                </td>

            


            
            </tr>
        {% endfor %}
    </table>

    
